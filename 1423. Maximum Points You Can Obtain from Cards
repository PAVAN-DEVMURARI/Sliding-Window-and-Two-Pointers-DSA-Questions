class Solution {
public:
    int maxScore(vector<int>& cardPoints, int k) {
        int lsum = 0 , rsum = 0 , max_sum = 0;
        int n = cardPoints.size();
        for (int i=0;i<k;i++)
        {
            lsum += cardPoints[i];
        }
        max_sum = lsum;
        int rightidx = n-1;
        for (int i=k-1;i>=0;i--)
        {
            lsum -= cardPoints[i];
            rsum += cardPoints[rightidx];;
            max_sum = max(max_sum , lsum+rsum);
            rightidx--;
        }
        return max_sum;
    }
};
